# AutoPurple Configuration Example
# Copy this file to .env and update with your actual values

# Environment
AUTOPURPLE_ENV=dev

# AWS Configuration
AWS_PROFILE=default
AWS_REGION=us-east-1

# MCP Server Endpoints (optional)
# These are the endpoints for AWS MCP servers
MCP_ENDPOINT_CCAPI=http://localhost:8080
MCP_ENDPOINT_CFN=http://localhost:8081
MCP_ENDPOINT_DOCS=http://localhost:8082

# AI Configuration (optional)
# Claude API key for analysis and planning
CLAUDE_API_KEY=your_claude_api_key_here

# Alternative: OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
AUTOPURPLE_DB_PATH=~/.autopurple/db.sqlite

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Pipeline Configuration
MAX_CONCURRENT_FINDINGS=10
MAX_CONCURRENT_VALIDATIONS=5
MAX_CONCURRENT_REMEDIATIONS=3

# Timeouts (in seconds)
SCOUTSUITE_TIMEOUT=3600
PACU_TIMEOUT=1800
MCP_TIMEOUT=300

# Security Settings
REQUIRE_MFA=true
DRY_RUN_DEFAULT=true

